<div class="page-container">
  <p style="color: green"><%= notice %></p>

  <h1 class="m-4 text-2xl">Posts</h1>

  <div class="my-4">
    <% @posts.each do |post| %>
      <p class="m-4"><%= render post %></p>

      <p class="m-4">
        <%= link_to "Show this post", post, class: 'button' %>
      </p>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path, class: 'button m-4' %>
</div>
